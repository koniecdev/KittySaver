@namespace KittySaver.Wasm.Shared.Components.Advertisement

<div class="advertisement_contact_modal">
    <button class="btn" @onclick="ShowModal">
        Pokaż kontaktowy numer telefonu oraz adres email
    </button>

    @if (_isVisible)
    {
        <div class="modal-backdrop" @onclick="HideModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>Dane kontaktowe</h3>
                    <button type="button" class="close-button" @onclick="HideModal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="contact-item">
                        <span class="contact-label">Telefon:</span>
                        <span class="contact-value">@PhoneNumber</span>
                    </div>
                    <div class="contact-item">
                        <span class="contact-label">Email:</span>
                        <span class="contact-value">@Email</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        min-width: 300px;
        max-width: 500px;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .close-button {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
    }

    .contact-item {
        margin: 10px 0;
    }

    .contact-label {
        font-weight: bold;
        margin-right: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

@code {
    [Parameter]
    public string PhoneNumber { get; set; } = "";

    [Parameter]
    public string Email { get; set; } = "";

    private bool _isVisible;

    private void ShowModal()
    {
        _isVisible = true;
    }

    private void HideModal()
    {
        _isVisible = false;
    }
}